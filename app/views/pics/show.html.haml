#pic_show.row
	.col-md-6.col-md-offset-3
		.panel.panel-default
			.panel.heading.pic_image
				= image_tag @pic.image.url
			.panel-body
				%h1= @pic.title
				%p= @pic.description
        
			.panel-footer
				.row
					.col-md-6
						%p.user
							by
							= @pic.user.email

%br

= link_to "Back", root_path
= link_to "Edit", edit_pic_path
= link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?" }